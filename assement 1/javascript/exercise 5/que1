      <script>
      	var amt=parseInt(window.prompt("Enter Amount"));
      	var rate=parseInt(window.prompt("Enter Interest Rate"));
      	var years=parseInt(window.prompt("Enter Years"));
      	var Interest=(amt*rate*years)/100;
      	window.alert("Interest Amount is:"+Interest);      	
      </script>
